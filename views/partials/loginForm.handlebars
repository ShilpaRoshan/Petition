<h2>Login!</h2>
<form action="/login" method="POST">
    <label for="email">E-mail</label>
    <input class="email" type="email" name="email" required id="email" />

    <label for="password">Password</label>
    <input
        class="password"
        type="password"
        name="password"
        required
        id="password"
    />

    {{#if error}}<p class="error">{{error}}</p>{{/if}}
    {{#if noUser}}<p class="noUser">{{noUser}}</p>{{/if}}

    <div>
        <input type="hidden" name="_csrf" value={{csrfToken}} />
        <button type="submit">Submit</button>
    </div>
    <p>Not registered?<a href="/register">Please click here..</a></p>
    <a href="/login">Logout</a>

</form>